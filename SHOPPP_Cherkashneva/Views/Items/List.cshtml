@using SHOPPP_Cherkashneva.Data.Models;
@model IEnumerable<Items>;

@{
    Layout = "_Layout";
}
<h2>Все предметы</h2>
@{
    foreach (var item in Model)
    {
        <div class="item">
            <img src="@item.Img" />
            <h3>Модель: @item.Name</h3>
            <div class="data">
                <p>Цена: @item.Price</p>
                <p>Категория: @item.Category.Name</p>
                <div>Описание: @item.Description</div>
            </div>
        </div>
    }
}
